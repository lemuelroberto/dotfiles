#!/bin/bash

# Define the workspace directory
export WORKSPACE=$HOME/workspace

# Define the repositories directory
export REPOSITORIES=$HOME/repositories

# Define default text editor
export EDITOR=vim

# Define text window's capabilities
export TERM=xterm-256color

# Enable BuildKit for faster Docker builds
export DOCKER_BUILDKIT=1

# Enable gcloud auth plugin: https://cloud.google.com/blog/products/containers-kubernetes/kubectl-auth-changes-in-gke
export USE_GKE_GCLOUD_AUTH_PLUGIN=true

# Config gpg-agent
GPG_TTY=$(tty)
export GPG_TTY

# Ignore all specific platform requirements while running composer
export COMPOSER_IGNORE_PLATFORM_REQS=1
